<div class="edit-box">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
<div class="error_explanation"></div>
  <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="body-box">
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<div class ="Update-book">
<%= f.submit 'Update Book' %>
</div>
<div class="edit-link">
<span><%= link_to "Show" , book_path(@book.id) %></span>
</div>
<span><%= link_to "Back" , "/books" %></span>

<% end %>
</div>
</div>